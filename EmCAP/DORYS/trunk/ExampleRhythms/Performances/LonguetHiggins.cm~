;;;
;;; Longuet-Higgins' cliche example, split into the rhythm and melody
;;; (without accent), in 2/4. \cite{schwaneur}[p477]
;;;
(setf cliche-rhythm (rhythms e s s e e+e e q))
(setf cliche-melody (notes c5 g4 g4 af4 g4 b4 c5))

(generator longuet-cliche-unaccented rhythm-onset (amplitude 0.75)
	   (setf rhythm (item cliche-rhythm :kill t))
	   (setf note (item cliche-melody))
	   (setf duration rhythm))	;duration same as rhythm for
					;final silence

